{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}

{% if form.vars.value.id %}
    {% set formAction = path('bug.issue_update', { 'id': form.vars.value.id }) %}
{% else %}
    {% set formAction = path('bug.issue_create') %}
{% endif %}

{% if not form.vars.value.type and form.vars.value.id %}
    {% set formAction = path('bug.issue_children_create', { 'id': form.vars.value.parentIssue.id }) %}
{% endif %}



{% block navButtons %}
    {% if form.vars.value.id and resource_granted('DELETE', form.vars.value) %}
        {{ UI.deleteButton({
            'dataUrl': path('bug_api_delete_issue', {'id': form.vars.value.id}),
            'dataRedirect': path('bug.issue_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-tag',
            'dataId': form.vars.value.id,
            'entity_label': 'oro.bug.issue.entity_label'|trans
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.cancelButton(path('bug.issue_index')) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if resource_granted('inventory.vehicle_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({ 'html': html }) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
        'entity':      form.vars.value,
        'indexPath':   path('bug.issue_index'),
        'indexLabel': 'oro.bug.issues.label'|trans,
        'entityTitle': form.vars.value.summary
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'oro.bug.issue.label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'vehicle-edit' %}
    {% set form_fields =[
    form_row(form.summary),
    form_row(form.description),
    form_row(form.priority)|trans,
    form_row(form.resolution)|trans,
    form_row(form.assignee)|trans,
    ] %}

    {% if form.type is defined %}

        {% set  form_fields =form_fields | merge([form_row(form.type)]) %}
    {% endif %}
    {% set dataBlocks = [{
    'title': 'General'|trans,
    'class': 'active',
    'subblocks': [{
    'title': '',
    'data': form_fields
    }]
    }] %}
    {% set data = {
    'formErrors': form_errors(form)? form_errors(form) : null,
    'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}